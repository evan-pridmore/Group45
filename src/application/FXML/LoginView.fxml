<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginViewController">
   <center>
      <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="260.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" layoutX="17.0" layoutY="14.0" text="Group45 Project" AnchorPane.topAnchor="15.0">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label alignment="TOP_CENTER" layoutX="56.0" layoutY="42.0" text="Login Menu" AnchorPane.topAnchor="45.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox layoutX="5.0" layoutY="77.0" AnchorPane.bottomAnchor="20.0" AnchorPane.topAnchor="80.0">
               <children>
                  <TextField fx:id="loginUsername" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="150.0" promptText="Username">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="loginPassword" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="150.0" promptText="Password">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <Button fx:id="loginButton" defaultButton="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#attemptLogin" prefHeight="25.0" prefWidth="150.0" text="Log in">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#signUp" prefHeight="25.0" prefWidth="150.0" text="Sign up">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="loginErrorLabel" maxWidth="150.0" textFill="RED" wrapText="true">
                     <VBox.margin>
                        <Insets left="20.0" top="5.0" />
                     </VBox.margin></Label>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
